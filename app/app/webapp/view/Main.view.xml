<mvc:View controllerName="colosseum2022.app.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}" showHeader="true">
		<headerContent>
			<Button text="{i18n>addNewTask}" press="onPressAddNewTask"/>
		</headerContent>
        <content>
			<List id="MainTaskList" 
				items="{
					path: 'CatalogModel>/Tasks',
					parameters: {
						$count: true,
						$$updateGroupId : 'taskGroup'
					}
				}">
				<items>
					<ObjectListItem
						title="{CatalogModel>title}"
						type="Active"
						number="{CatalogModel>duedate}" 
						press="onPressTask">
						<firstStatus>
							<ObjectStatus
								text="{path: 'CatalogModel>status', formatter: '.formatter.statusText'}"
								state="{path: 'CatalogModel>status', formatter: '.formatter.statusState'}" />
						</firstStatus>
						<ObjectAttribute text="{CatalogModel>description}" />
					</ObjectListItem>
				</items>
			</List>
		</content>
    </Page>
</mvc:View>
